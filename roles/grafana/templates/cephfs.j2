    {
      "gridPos": {
        "h": {{ h }},
        "w": {{ w }},
        "x": {{ x }},
        "y": {{ y }},
      },
      "type": "stat",
      "title": "{{ title }}",
      "datasource": {
        "type": "prometheus",
        "uid": "{{ datasource.json.uid }}"
      },
      "description": "{{ description }}",
      "hideTimeOverride": true,
      "maxDataPoints": 100,
      "links": [],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "match": "null",
                "result": {
                  "text": "N/A"
                }
              },
              "type": "special"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": {% if cephfs %} "#d44a3a" {% else %} "#5794F2" {% endif %},
                "value": null
              },
              {
                "color": "rgba(237, 129, 40, 0.89)",
                "value": {{ share_size * 1000000000 / 20 }}
              },
              {
                "color": "#5794F2",
                "value": {{ share_size * 1000000000 / 5 }}
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          },
          "unit": "bytes"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "{{ datasource.json.uid }}"
          },
          "expr": "node_filesystem_avail_bytes{instance=\"{{ host }}:9100\",mountpoint=\"/mnt/cephfs\"}",
          "refId": "A",
          "range": false
        }
      ]
    },
